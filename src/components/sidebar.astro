---
const menuItems = [
  { name: 'Home', href: '/' },
  { name: 'Projects & Experiments', href: '/projects' },
  { name: 'Services', href: '/services' },
  { name: 'Newsletter', href: '/newsletter' },
  { name: 'What others say', href: '/testimonials' },
  { name: 'Investments', href: '/investments' },
  { name: 'Social', href: '/social' },
  { name: 'Blog', href: '/blog' },
];
---

<aside class="w-64 h-screen bg-white p-6 flex flex-col">
  <div class="flex items-center mb-8">
    <img src="/path-to-avatar.jpg" alt="Jake Robinson" class="w-12 h-12 rounded-full mr-4">
    <div>
      <h2 class="text-lg font-semibold">Jake Robinson</h2>
      <p class="text-sm text-gray-600">Designer, Founder, Investor</p>
    </div>
  </div>

  <nav class="flex-grow">
    <ul class="space-y-2">
      {menuItems.map((item) => (
        <li>
          <a href={item.href} class="text-base text-gray-700 hover:text-gray-900">{item.name}</a>
        </li>
      ))}
    </ul>
  </nav>
</aside>